/* pages/win_record/win_record.wxss */
.awards-record{
  text-align: center;
  margin-bottom: 100rpx;
}
.awards-record>text{
  display: inline-block;
  margin: 40rpx auto;
  font-size: 32rpx;
  font-weight: 400;
}
.record-list{
  margin: 0 30rpx;
}
.record-item{
  position: relative;
  text-align: left;
  height: 90rpx;
  display: flex;
  align-items: center;
}
.record-item>text:last-of-type{
  position: absolute;
  right: 0;
  display: inline-block;
  padding: 14rpx 30rpx;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  min-width: 104rpx;
  text-align: center;
}
.record-item .receive{
  background-color: #d9d9d9;
  color: #999999;
}